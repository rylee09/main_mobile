<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="SG EAS"
                android:textColor="#80ffff"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_logout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/usericon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_tips"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_activation_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/activation_standby_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_activation"
                            android:layout_width="290dp"
                            android:layout_height="86dp"
                            android:layout_marginTop="30dp"
                            android:background="@mipmap/standby" />

                        <TextView
                            android:id="@+id/tv_activation"
                            android:layout_width="230dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:gravity="center"
                            android:text="Standby"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="110dp"
                android:layout_centerHorizontal="true"
                android:layout_width="340dp"
                android:layout_height="360dp">
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_status_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@mipmap/onlinestatus_bg"
                        android:layout_width="270dp"
                        android:layout_height="270dp">

                        <ImageView
                            android:id="@+id/iv_status"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@mipmap/online_status" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="Online"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:background="@drawable/online_bg"
                            android:layout_width="65dp"
                            android:layout_height="28dp"

                            android:layout_marginBottom="25dp"/>

                        <TextView
                            android:id="@+id/tv_timestamp"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:gravity="center"
                            android:text="12-Jul-2021 12:05:24"
                            android:textColor="#80ffff"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="195dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#80ffff"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="System \n Readiness"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"/>
                    <ImageView
                        android:id="@+id/iv_system_readiness"
                        android:background="@mipmap/system_online"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="195dp"
                    android:layout_marginLeft="250dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="right"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#80ffff"
                        android:gravity="center"
                        android:text="Peer \n Readiness"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"/>
                    <ImageView
                        android:id="@+id/iv_peer_readiness"
                        android:background="@mipmap/peer_r_online"
                        android:layout_width="90dp"
                        android:layout_height="90dp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_acknowledge"
                android:layout_width="300dp"
                android:layout_height="56.7dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"
                android:background="@mipmap/acknowledge_2"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tv_acknowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:text="Acknowledge"
                    android:textColor="#ff0000"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>